<PreferenceScreen
    android:title="@string/screen_gestures_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceScreen
        android:key="app_circle_bar"
        android:fragment="com.android.settings.mallow.AppCircleBar"
        android:title="@string/circle_bar_title"
        android:summary="@string/circle_bar_summary" />

    <PreferenceScreen
        android:key="app_sidebar"
        android:fragment="com.android.settings.mallow.AppSidebar"
        android:title="@string/app_sidebar_title"
        android:summary="@string/app_sidebar_summary" />

    <PreferenceScreen
        android:key="gesture_anywhere"
        android:fragment="com.android.settings.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title"
        android:summary="@string/gesture_anywhere_summary" />

    <PreferenceScreen
        android:key="pa_pie_control"
        android:fragment="com.android.settings.paranoid.PieControl"
        android:title="@string/pa_pie_control_title"
        android:summary="@string/pa_pie_control_summary" />

    <PreferenceCategory
        android:key="category_dtts_options"
        android:title="@string/display_category_dtts_title" >

        <com.android.settings.mallow.SystemSettingSwitchPreference
            android:key="double_tap_sleep_gesture"
            android:title="@string/double_tap_to_sleep_title"
            android:summary="@string/double_tap_to_sleep_summary" />

        <com.android.settings.mallow.SystemSettingSwitchPreference
            android:key="double_tap_sleep_navbar"
            android:title="@string/double_tap_sleep_nav_bar_title"
            android:summary="@string/double_tap_sleep_nav_bar_summary"
            android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="category_gesture_options"
        android:title="@string/gestures_title" >

       <com.android.settings.mallow.SecureSettingSwitchPreference
            android:key="kill_app_longpress_back"
            android:title="@string/kill_app_longpress_back"
            android:summary="@string/kill_app_longpress_back_summary"
            android:defaultValue="false" />

        <com.android.settings.mallow.SystemSettingSwitchPreference
            android:key="three_finger_gesture"
            android:title="@string/three_finger_gesture"
            android:summary="@string/three_finger_gesture_summary"
            android:defaultValue="true" />

    </PreferenceCategory>

</PreferenceScreen>
